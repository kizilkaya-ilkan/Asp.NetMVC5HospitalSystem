@model Hospital.Models.Entity.Users

@{
    ViewBag.Title = "PersonelGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("PersonelDüzenle", "Personel", FormMethod.Post))
{
    <form class="u-form-group" method="post">
        <div style="padding-left:60px;padding-top:20px">

            @Html.LabelFor(t => t.ID)
            @Html.TextBoxFor(t => t.ID, new { @class = "form-control" })
            @Html.LabelFor(t => t.AD)
            @Html.TextBoxFor(t => t.AD, new { @class = "form-control" })
            @Html.LabelFor(t => t.SOYAD)
            @Html.TextBoxFor(t => t.SOYAD, new { @class = "form-control" })
            @Html.LabelFor(t => t.BÖLÜM)
            @Html.DropDownListFor(t => t.BÖLÜM, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
            @Html.LabelFor(t => t.YETKİDERECE)
            @Html.TextBoxFor(t => t.YETKİDERECE, new { @class = "form-control" })
            @Html.LabelFor(t => t.ANAHTAR)
            @Html.TextBoxFor(t => t.ANAHTAR, new { @class = "form-control" })
            @Html.LabelFor(t => t.GÖREVİ)
            @Html.DropDownListFor(t => t.GÖREVİ, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
            @Html.LabelFor(t => t.TELNO)
            @Html.TextBoxFor(t => t.TELNO, new { @class = "form-control" })
            @Html.LabelFor(t => t.TCNO)
            @Html.TextBoxFor(t => t.TCNO, new { @class = "form-control" })
            @Html.LabelFor(t => t.ADRES)
            @Html.TextBoxFor(t => t.ADRES, new { @class = "form-control" })

            <div style="padding-top:10px"></div>
            <button class="btn btn-info" id="Btn">
                Bölüm Düzenle
            </button>
        </div>

    </form>
}

